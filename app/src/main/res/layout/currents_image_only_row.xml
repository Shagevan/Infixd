<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/only_image_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/post_image_view"
            android:background="@color/ash_color"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_date_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="01/12/07 12.53"
        android:textColor="@color/white_color"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/post_image_view">

            <!-- likes layout -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/likes_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/passes_layout1"
                app:layout_constraintRight_toLeftOf="@+id/passes_layout1"
                app:layout_constraintTop_toTopOf="@+id/passes_layout1">

                <TextView
                    android:id="@+id/likes_text_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="5585"
                    android:textColor="@color/black_color"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/likes_image_view1"
                    app:layout_constraintLeft_toRightOf="@+id/likes_image_view1"
                    app:layout_constraintTop_toTopOf="@+id/likes_image_view1"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageView
                    android:id="@+id/likes_image_view1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/like_icon_after_press"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

            <!-- passes layout -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/passes_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/passes_text_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="8548"
                    android:textColor="@color/black_color"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/passes_image_view1"
                    app:layout_constraintLeft_toRightOf="@+id/passes_image_view1"
                    app:layout_constraintTop_toTopOf="@+id/passes_image_view1"
                    app:layout_constraintVertical_bias="0.5"  />

                <ImageView
                    android:id="@+id/passes_image_view1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/share_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>