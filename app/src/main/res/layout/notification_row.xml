<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/ash_color"
                android:layout_height="match_parent">

                <TextView
                    android:text="Chamara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/target_user_tv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintVertical_bias="0.78"
                    app:layout_constraintLeft_toLeftOf="@+id/second_user_imageView"
                    app:layout_constraintRight_toRightOf="@+id/second_user_imageView"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/second_user_imageView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:text="Boopathy "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sender_user_tv"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/first_user_imageView"
                    app:layout_constraintLeft_toLeftOf="@+id/first_user_imageView"
                    app:layout_constraintRight_toRightOf="@+id/first_user_imageView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    
                    />

                <ImageView
                    app:srcCompat="@drawable/right_arrow_initial_introduction"
                    android:id="@+id/imageView8"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintRight_toLeftOf="@+id/second_user_imageView"
                    app:layout_constraintLeft_toRightOf="@+id/first_user_imageView"
                    app:layout_constraintTop_toTopOf="@+id/first_user_imageView"
                    app:layout_constraintBottom_toBottomOf="@+id/first_user_imageView" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/userprofile"
                    android:id="@+id/second_user_imageView"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/userprofile"
                    android:id="@+id/first_user_imageView"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>